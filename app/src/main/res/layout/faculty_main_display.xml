<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.101"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    android:background="@android:color/transparent"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    >

    <TextView
        android:id="@+id/id_no"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/id_no"
        android:visibility="gone"
        />

    <LinearLayout
        android:id="@+id/info_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/f_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="4dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_circle" />

                <TextView
                    android:id="@+id/f_name"
                    android:layout_width="145dp"
                    android:layout_height="39dp"
                    android:layout_marginStart="2dp"
                    android:text="Otis Osbourne"
                    android:textAlignment="center"
                    android:textColor="@color/d_blue"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingTop="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:id="@+id/faculty_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="3dp" />

                <TextView
                    android:id="@+id/f_course"
                    android:layout_width="242dp"
                    android:layout_height="74dp"
                    android:layout_margin="10dp"
                    android:text="Mathematics"
                    android:paddingTop="50dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/f_preview"
                    android:layout_width="240dp"
                    android:layout_height="22dp"
                    android:layout_margin="10dp"
                    android:text="Lorem ipsum dolor sit amet, consectetur"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>